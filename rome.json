{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "semicolons": "asNeeded"
    }
  }
}
